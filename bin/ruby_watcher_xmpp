#!/usr/bin/env ruby
require_relative 'support/init'
require_relative 'support/init_se'
require_relative 'support/xmpp_config'
require 'logger'
require_relative '../lib/watcher'
require_relative '../lib/view_xmpp'

logger = Logger.new(STDOUT).tap {|l| Blather.logger = l; l.level = Logger::INFO }

view = View::Xmpp::QuestionsManagerView.new xmpp_client_id, *blather_daemon_credentials

watcher = Watcher::QuestionsWatcher.new get_se_client(), view, logger

watcher.watch_tags 'ruby'